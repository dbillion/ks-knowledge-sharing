root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,css,scss,less,html,vue}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[*.{java,kt}]
indent_size = 4

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf