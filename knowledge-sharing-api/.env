# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_TYPE=sqlite
DB_DATABASE=knowledge_sharing.db

# For PostgreSQL (production)
# DB_TYPE=postgres
# DB_HOST=localhost
