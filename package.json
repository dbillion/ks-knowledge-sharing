{
  "name": "ks-knowledge-sharing",
  "version": "1.0.0",
  "description": "A comprehensive knowledge sharing platform for teams",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "npm run lint && npm test",
    "prepare": "husky install"
  },
  "keywords": [
    "knowledge-sharing",
    "documentation",
    "collaboration",
    "team-tools",
    "knowledge-base"
  ],
  "author": "Oludayo Adeoye <dbillion>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbillion/ks-knowledge-sharing.git"
  },
  "bugs": {
    "url": "https://github.com/dbillion/ks-knowledge-sharing/issues"
  },
  "homepage": "https://github.com/dbillion/ks-knowledge-sharing#readme",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.7.3",
    "dotenv": "^16.4.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.4.1",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}